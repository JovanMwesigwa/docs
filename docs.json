{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "FundKit Documentation",
  "colors": {
    "primary": "#C384F9",
    "light": "#E4C9FF",
    "dark": "#8B5CF6"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "quickstart", "installation"]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "core/payment-client",
              "core/providers",
              "core/transactions",
              "core/error-handling"
            ]
          },
          {
            "group": "Providers",
            "pages": ["providers/honeycoin", "providers/easypay", "providers/tola"]
          },
          {
            "group": "Advanced",
            "pages": ["advanced/webhooks", "advanced/testing", "advanced/production"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Core API",
            "pages": [
              "api-reference/payment-client",
              "api-reference/collections",
              "api-reference/transactions"
            ]
          },
          {
            "group": "Provider APIs",
            "pages": [
              "api-reference/providers/honeycoin",
              "api-reference/providers/easypay",
              "api-reference/providers/tola"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "npm",
          "href": "https://www.npmjs.com/package/@fundkit/core",
          "icon": "box"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@fundkit.dev",
          "icon": "envelope"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://www.fundkit.dev/dashboard"
    }
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity", "mcp", "cursor", "vscode"]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/fundkit/fundkit",
      "x": "https://x.com/fundkit_dev"
    }
  }
}
